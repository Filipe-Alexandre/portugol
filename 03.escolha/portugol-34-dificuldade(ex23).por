programa {
  funcao inicio() {
     inteiro nivel
      escreva("Escolha o nível de dificuldade:\n")
      leia(nivel)
    
    escolha(nivel) {
      caso 1: 
        escreva("Fácil")
        pare
      caso 2: 
        escreva("Médio")
        pare
      caso 3: 
        escreva("Difícil")
        pare
      caso 4: 
        escreva("H A R D C O R E")
        pare
      caso contrario:
        escreva("Opção inválida")
    }
  }
}
