programa {
  funcao inicio() {
     inteiro prato
      escreva("Digite um numero e ganhe um prato misterioso\n")
      leia(prato)
    
    escolha(prato) {
      caso 1: 
        escreva("Pizza")
        pare
      caso 2: 
        escreva("Hamburger")
        pare
      caso 3: 
        escreva("Lasanha")
        pare
      caso 4: 
        escreva("Salada")
        pare
      caso contrario:
        escreva("Opção inválida")
    }
  }
}
